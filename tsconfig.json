// ./tsconfig.json
{
  "compilerOptions": {
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2022",
    "strict": true,
    "outDir": ".build",
    "baseUrl": "./",
    "rootDir": "./", 
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}